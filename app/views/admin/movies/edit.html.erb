<h1>admin/movies/edit</h1>

<%= form_with model:@movie, url: admin_movie_path(@movie.id), local:true, method: :put do |t| %>
 <h4>タイトル</h4>
  <%= t.text_field :name %>
  <h4>公開年</h4>
  <%# <%= t.date_field :year %> 
  <%= t.select :year,Date.today.year-10 .. Date.today.year+10 %>
  <h4>映画概要</h4>
  <%= t.text_area :description %>
  <h4>ポスターURL</h4>
  <%= t.text_field :image_url %>
  <h4>上映情報</h4>
  <%# <%= t.select :is_showing,[['公開予定',0],['上映中',1]] %> 
  <%= t.check_box :is_showing %> 公開中
  <%= t.submit "保存" %>
<% end %>

  <%= button_to "削除", admin_movie_path(@movie.id), method: :delete, data: {confirm: "投稿を削除します。よろしいですか？"} %>



