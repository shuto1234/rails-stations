<!DOCTYPE html>
<h1>映画一覧ページ</h1>
<table>
  <tr>
    <th>タイトル</th>
    <th>公開年</th>
    <th>概要</th>
    <th>画像URL</th>
    <th>上映中</th>
    <th>登録日時</th>
    <th>更新日時</th>
  </tr>
  <% @movies.each do |movie| %>
    <tr>
      <td><%= movie.name %></td>
      <td><%= movie.year %></td>
      <td><%= movie.description %></td>
      <td><img src=<%= movie.image_url %>></td>
      <td>
        <% if movie.is_showing == true %>
          上映中
        <%  else movie.is_showing == false %>
          上映予定
        <% end %>
      </td>
      <td><%= movie.created_at %></td>
      <td><%= movie.updated_at %></td>
    </tr>
  <% end %>
</table>